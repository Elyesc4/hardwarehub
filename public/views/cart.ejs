<div class="container-fluid h-100">
    <div class="container h-100 d-flex flex-column wrapper">
        <div class="heading">
            <h1>
                Dein Warenkorb
            </h1>
        </div>
        <div class="d-flex gap-3 content">
            <div class="col-8 item-list">
                <% for( let i = 0; i < inCart.length; i++ ) { %>
                    <% item = inCart[i] %>
                    <div class="tile-horizontal d-flex gap-3"  data-id="<%= item.id %>">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="/img/products/placeholder.svg" alt="placeholder" height="100%">
                        </div>
                        <div class="d-flex flex-column justify-content-between flex-grow-1 tile-content">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h3><%= item.name %></h3>
                                    <p><%= item.description %></p>
                                </div>
                                <div class="product-count">
                                    <div>
                                        <input type="number" min="1" value="<%= item.pieces %>">

                                    </div>
                                </div>
                            </div>
                            <div class="price">
                                <h2><%= Number((item.price_netto * item.pieces).toFixed(2)) %>€</h2>
                            </div>
                        </div>
<!--                        <div class="context-actions">-->
<!--                            &lt;!&ndash; <i class="fa-solid fa-trash"></i> &ndash;&gt;-->
<!--                            <i class="fa-solid fa-circle-minus"></i>-->
<!--                            <i class="fa-solid fa-circle-plus"></i>-->
<!--                        </div>-->
                    </div>
                <% } %>
            </div>
            <div class="col-4 d-flex flex-column gap-3">
                <div class="tile">
                    <div class="d-flex justify-content-between align-items-baseline">
                        <p>Zwischensumme:</p>
                        <h2><%= cartPrice %>€</h2>
                    </div>
                </div>
                <div>
                    <form action="#" method="post" class="form-group d-flex gap-3">
                        <button type="submit" class="form-control btn btn-secondary">Zurück</button>
                        <button type="submit" class="form-control btn btn-primary">Zur Kasse</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>